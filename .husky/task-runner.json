{
   "$schema": "https://alirezanet.github.io/Husky.Net/schema.json",
   "tasks": [
        {
            "name": "format",
            "group": "pre-commit",
            "command": "dotnet",
            "args": ["format", "--verify-no-changes", "--no-restore"],
            "windows": {
                "command": "dotnet",
                "args": ["format", "--verify-no-changes", "--no-restore"]
            }
        },
        {
            "name": "test",
            "group": "pre-commit",
            "command": "dotnet",
            "args": ["test"],
            "windows": {
                "command": "dotnet",
                "args": ["test"]
            }
        }
    ]
}
