{
   "$schema": "https://alirezanet.github.io/Husky.Net/schema.json",
   "tasks": [
        {
            "name": "format",
            "group": "pre-commit",
            "command": "dotnet",
            "args": ["format", "--verify-no-changes", "--no-restore"],
            "windows": {
                "command": "dotnet",
                "args": ["format", "--verify-no-changes", "--no-restore"]
            }
        },
        {
            "name": "analyze",
            "group": "pre-commit",
            "command": "dotnet",
            "args": ["build", "--no-restore", "--verbosity", "quiet", "/p:RunAnalyzers=true", "-warnaserror"],
            "windows": {
                "command": "dotnet",
                "args": ["build", "--no-restore", "--verbosity", "quiet", "/p:RunAnalyzers=true", "-warnaserror"]
            }
        },
        {
            "name": "roslynator-analyze",
            "group": "pre-commit",
            "command": "dotnet",
            "args": [
                "tool",
                "run",
                "roslynator",
                "--",
                "analyze",
                "Archetype.sln",
                "--properties",
                "WarningsAsErrors=true"
            ],
            "windows": {
                "command": "dotnet",
                "args": [
                    "tool",
                    "run",
                    "roslynator",
                    "--",
                    "analyze",
                    "Archetype.sln",
                    "--properties",
                    "WarningsAsErrors=true"
                ]
            }
        },
        {
            "name": "test",
            "group": "pre-commit",
            "command": "dotnet",
            "args": ["test", "--no-build", "--logger", "console", "--verbosity", "normal"],
            "windows": {
                "command": "dotnet",
                "args": ["test", "--no-build", "--logger", "console", "--verbosity", "normal"]
            }
        }
    ]
}
